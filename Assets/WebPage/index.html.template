<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WebSocket Control</title>
    <style>
        body {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f0f0f0;
            font-family: Arial, sans-serif;
        }

        .container {
            text-align: center;
        }

        h1 {
            color: #333;
        }

        .btn {
            display: inline-block;
            padding: 15px 30px;
            margin: 10px;
            font-size: 18px;
            color: white;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-align: center;
        }

        .btn:hover {
            background-color: #0056b3;
        }

        .btn:active {
            background-color: #004494;
        }
    </style>
    <script>
        function generateClientId() {
            return 'client-' + Math.random().toString(36).substr(2, 9);
        }

        const clientId = generateClientId();
        const socket = new WebSocket('ws://__SERVER_IP__:8080/GameControl');

        socket.onopen = function() {
            console.log('WebSocket is connected. Client ID:', clientId);
        };

        socket.onmessage = function(event) {
            console.log('Received from server: ' + event.data);
        };

        socket.onclose = function(event) {
            if (event.wasClean) {
                console.log('Connection closed cleanly');
            } else {
                console.log('Connection died');
            }
        };

        socket.onerror = function(error) {
            console.error('WebSocket Error: ' + error);
        };

        function sendCommand(command) {
            if (socket.readyState === WebSocket.OPEN) {
                const message = JSON.stringify({ clientId: clientId, command: command });
                socket.send(message);
            } else {
                console.error('WebSocket is not open.');
            }
        }
    </script>
</head>
<body>
    <div class="container">
        <h1>WebSocket Control</h1>
        <button class="btn" onclick="sendCommand('move_left')">Move Left</button>
        <button class="btn" onclick="sendCommand('move_right')">Move Right</button>
    </div>
</body>
</html>
